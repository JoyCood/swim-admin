{% import "_macro.html" as macro %}
<table class="table table-hover">
	<thead>
		<tr>
			<!-- <th width="30"><input type="checkbox" rel="#news-trash-btn" /></th> -->
			<th width="200">#ID</th>
			<th width="100">校区</th>
			<th>场馆名称</th>
            <th width="70">教练</th>
            <th width="120">联系方式</th>
			<th width="120">操作金额（元）</th>
			<th width="150">操作时间</th>
			<th width="120">操作员备注</th>
			<th width="120">汇款凭证</th>
			<th width="80">操作</th>
		</tr>
	</thead>
	<tbody>
		{% for item in data.items %}
		<tr data-id="{{item._id}}">
			<td>{{item._id}}</td>
			<td>{{item.region_name}}</td>
			<td>{{item.natatorium_name}}</td>
			<td>{{item.teacher_name}}</td>
			<td>{{item.teacher_phone}}</td>
			<td>{{item.total_fee}}</td>
			<td>{{item.create_time|date('Y-m-d H:i:s')}}</td>
			<td>{{item.notes}}</td>
			<td>{{ macro.thumb('photo', item.photo) }}</td>
			<td class="table-action">
				<a href="javascript:;" class="fa fa-bars"></a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% include '_pagination.html' with data %}
