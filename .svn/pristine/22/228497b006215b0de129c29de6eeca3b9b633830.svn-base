<div class="box">
    <div class="box-title">
        <h3>用户动态</h3>
    </div>
    <ul id="myTab" class="nav nav-tabs">
       <li class="active">
          <a href="#home" data-toggle="tab">回帖({{comments_count}})</a>
       </li>
       <li><a href="#ios" data-toggle="tab">发帖({{post_count}})</a></li>
     </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="home">
                {% if comments %}
                {% for comment in comments %}
                <span class="time">{{comment.create_time|date('y-m-d H:i')}}</span>
                <div class="comment_list">
                    <span class="user_comment">{{comment.content.text}}</span>

                    <p class="tweet_title">{{comment.Replies.content.title}}</p>
                </div>
                {% endfor %}
                {% endif %}
      </div>
      <div class="tab-pane fade" id="ios">
                {% if postlist %}
                {% for post in postlist %}
                <span class="time">{{post.create_time|date('y-m-d H:i')}}</span>
                <div class="comment_list">
                    <p class="tweet_title">{{post.content.title}}</p>
                </div>
                {% endfor %}
                {% endif %}
      </div>
    </div>
</div>
