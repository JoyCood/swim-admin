<div class="text-right">
	<button id="user-add-btn" class="btn btn-success"><b class="fa fa-plus"></b>新建</button>
	<button id="user-trash-btn" class="btn disabled"><b class="fa fa-trash"></b>删除</button>
</div>
<table class="table table-hover">
	<thead>
		<tr>
			<th width="30"><input type="checkbox" rel="#user-trash-btn" /></th>
			<th width="120">帐号</th>
			<th width="120">姓名</th>
            {#<th>所属组</th>#}
			<th width="40">状态</th>
			<th width="30"></th>
		</tr>
	</thead>
	<tbody>
		{% for item in data.items %}
		<tr data-id="{{item._id}}">
			<td><input type="checkbox" name="user" value="{{item._id}}" /></td>
			<td>{{item.username}}</td>
			<td>{{item.name}}</td>
            {#<td>{{item.groups|join(', ')}}</td>#}
			<td>{{item.active|status}}</td>
			<td class="table-action">
				<a class="fa icon-edit" app-bubble="false"></a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{#% include '_pagination.html' with data %#}
