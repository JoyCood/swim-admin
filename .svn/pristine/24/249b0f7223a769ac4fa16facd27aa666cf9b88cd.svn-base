{% import "_macro.html" as macro %}
<form id="moov-order-form" action="goods/moov/form.html" target="#moov-list">
	<div class="box">
		<div class="box-title">
			<h3>订单信息</h3>
		</div>
		<div class="box-content">
			<div>
				<table class="form" style="width: 500px">
					<tr>
						<th width="60">订单号：</th>
						<td colspan="2">
							<input type="text" name="orderId" id="" class="form-control" value="{{order.order_id}}" placeholder="请输入订单号" autofocus="on" app-required="on" autocomplete="off" />
						</td>
					</tr>
				</table>
			</div>
		</div>
		<div class="box-footer">
			<input type="hidden" name="id" value="{{order._id}}" />
			<button type="submit" id="moov-submit" class="btn btn-primary">确定</button>
			<button type="button" class="btn" app-state="cancel">取消</button>
		</div>
	</div>
</form>
<script>
$(function() {
	$('#moov-order-form').on('init', function() {
		$(this).on('submit', function() {
			if(App.checkValidity(this)) {
				App.ajax({
					form: this,
					success: function() {
						App.Box.close();
					}
				});
			}
			return false;
		});
	}).on('close', function(event, box, state) {
		
	});
});
</script>
